<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Blog</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4"><%= user.name %></h1>
    
    <a href="/article/new" class="btn btn-success">New Article</a>

    <% article.forEach(article => { %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= article.image %>" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <a href="article/<%= article.id %>" style="text-decoration:none;color:black;"><h5 class="card-title"><%= article.name %></h5></a>
              <a href="user/<%= article.author.id %>"><p class="card-text"><%= article.author.username %></p></a>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>